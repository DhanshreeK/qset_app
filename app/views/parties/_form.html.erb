                 </div>
              </div> 
            <%else%>
              <div class="form-group">
                 <div class="col-sm-3">
                  <label class="col-sm-6 control-label">Email</label>
                    <%= f.text_field :email,class: "form-control"%>
                 </div>
              </div>
            <%end%>

            <%if current_user.role == 'Party'%>

            <%else%>
