              </div>
            </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <label class="col-sm-10 control-label">Commodity Name</label>
                    <%= f.text_field :commodity_name, class: "form-control" ,placeholder: "Commodity Name"%>
